<?xml version="1.0"?>
<launch>

    <!-- By default, we do not start a database (it can be large) -->
    <arg name="db" default="false" />
    <arg name="sim" default="false" doc="Launch a simulated environment for the ur10e"/>
    <arg name="gui" default="false" doc="Starts gazebo gui" />

    <arg name="moveit"  default="true" doc="Use MoveIt for motion planning"/>
    <arg name="rviz"    default="true" doc="Launch RViz with movit planner plugin"/>

    <arg name="limited" default="true"  doc="Use the description in limited mode (Every axis rotates from -PI to PI)"/>


    <!--    Not working for now-->
    <!--    <include unless="$(arg sim)" file="$(find ur_robot_driver)/launch/ur10e_bringup.launch">-->
    <!--        <arg name="limited" value="$(arg limited)"/>-->
    <!--    </include>-->

    <include if="$(arg sim)" file="$(find mmtbot_gazebo)/launch/mmtbot.launch">
        <!--        <arg name="limited" value="$(arg limited)"/>-->
        <arg name="gui"     value="$(arg gui)"/>
    </include>

    <group if="$(arg moveit)">

         <include file="$(find ur10e_moveit_config)/launch/ur10e_moveit_planning_execution.launch">
            <arg name="sim" value="$(arg sim)"/>
            <arg name="load_robot_description" value="false" />
        </include>

            <include if="$(arg rviz)" file="$(find mmtbot_bringup)/launch/visualize.launch">
            </include>


    <!--        &lt;!&ndash; If database loading was enabled, start mongodb as well &ndash;&gt;-->
    <!--&lt;!&ndash;        <include file="$(find ur10_e_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)"/>&ndash;&gt;-->
    <!--        <include file="$(find ur10_e_moveit_config)/launch/default_warehouse_db.launch"/>-->
        </group>

    <!--     <node pkg="mmtbot" name="frustum" type="frustum.py" output="screen"/>-->



</launch>

