<!--    <origin xyz="${table1_lenght/2-0.04} 0.0 0.1" rpy="0.0 0.0 0.0" />-->
<!--  </joint>-->

    <joint name="tabletop_table1_to_ur10e" type="fixed">
    <parent link="world" />
    <child link = "base_link"/>
    <origin xyz="0 0.0 0.1" rpy="0.0 0.0 0.0" />
  </joint>


