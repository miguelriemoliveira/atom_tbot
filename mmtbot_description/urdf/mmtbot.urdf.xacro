<!--    <origin xyz="3 0 0" rpy="0 0 0" />-->
<!--  </xacro:table_macro>-->

  <!--  Manipulator-->
  <xacro:ur10e_robot prefix="" joint_limited="false"/>

  <!--  Place robot on top of the table1-->
